extends ../layouts/slidebar

block content
    .container     
        .wrapper-changepwd
            a#back(href='/about') Quay lai

            form#name-log1
                label.lb-pwd(for='') tên đăng nhập
                input#name-login(type='text', disabled="disabled", value="hoangan123")
                
            form#pwd-new(method='post', action='', onsubmit='return validateForm()')
                label.lb-pwd(for='pwd') Mật khẩu mới
                input#pwd(name="password", type='password', placeholder="Nhập mật khẩu mới...", onkeyup='check();')
                i#eye.fas.fa-eye

            form#pwd-again(method='post', action='', onsubmit='return validateForm()')
                label.lb-pwd(for='pwd') Nhập lại mật khẩu
                input#pwdTwo(name="confirm-password", type='password', placeholder="Nhập lại mật khẩu...", onkeyup='check();')
                span#message
                i#eyeTwo.fas.fa-eye

                input#save(type='submit', name='save', value='Lưu thay đổi')
